<?xml version="1.0" encoding="UTF-8"?>
<web-app id="box-web" metadata-complete="true" version="2.5"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xml="http://www.w3.org/XML/1998/namespace"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd ">

	<!-- 定义LOG4J监听器 -->
	<!-- 把log4j配置在这里的目的是可以配置log4j将日志打印到web项目的目录里 log4j.appender.myfile.File=${webapp.root}/WEB-INF/demo.log -->
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>
	<!-- log4j的配置相关 -->
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>/WEB-INF/classes/log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>


	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- 这里只声明引入一个spring配置文件，其他的都在该文件中import -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
<!-- 		<param-value>classpath*:applicationContext.xml</param-value> -->
        <param-value>classpath*:applicationContext.xml</param-value>
	</context-param>

	<filter>
		<filter-name>HiddenHttpMethodFilter</filter-name>
		<filter-class>org.springframework.web.filter.HiddenHttpMethodFilter</filter-class>
		<init-param>
			<param-name>methodParam</param-name>
			<param-value>_method</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>HiddenHttpMethodFilter</filter-name>
		<servlet-name>DispatcherServlet</servlet-name>
	</filter-mapping>

	<filter>
		<filter-name>HttpMethodFilter</filter-name>
		<filter-class>org.springframework.web.filter.HttpPutFormContentFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>HttpMethodFilter</filter-name>
		<servlet-name>DispatcherServlet</servlet-name>
	</filter-mapping>

	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<servlet-name>DispatcherServlet</servlet-name>
	</filter-mapping>
	<filter>
		<filter-name>SpringEnvironmentFilter</filter-name>
		<filter-class>com.qyf404.box.common.web.SpringEnvironmentFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SpringEnvironmentFilter</filter-name>
		<servlet-name>DispatcherServlet</servlet-name>
	</filter-mapping>


	<servlet>
		<servlet-name>DispatcherServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value> classpath:mvc-dispatcher-servlet.xml</param-value>
		</init-param>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<!-- 返回的是一个页面 -->
	<servlet-mapping>
		<servlet-name>DispatcherServlet</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>
	<!-- 返回一个json <servlet-mapping> <servlet-name>DispatcherServlet</servlet-name> 
		<url-pattern>/*</url-pattern> </servlet-mapping> -->
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
